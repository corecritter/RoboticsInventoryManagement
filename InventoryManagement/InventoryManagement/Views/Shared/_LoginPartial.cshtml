@using Microsoft.AspNet.Identity
@if (Session["LoggedUserID"] != null)
{
    using (Html.BeginForm("LogOff", "Login", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Hello " + Session["LoggedUserName"] + "!", "Index", "Users", routeValues: null, htmlAttributes: new { title = "Users" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <!----/><li>@Html.ActionLink("Register", "Login", "Login", routeValues: null, htmlAttributes: new { id = "registerLink" })</li><!---->
        <li>@Html.ActionLink("Log in", "Login", "Login", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
