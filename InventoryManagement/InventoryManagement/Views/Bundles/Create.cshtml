@model InventoryManagement.Controllers.BundlesViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Bundles</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.BundleName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.BundleName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BundleName, "", new { @class = "text-danger" })
            </div>
        </div>
        <h3>Select Schools to create a package bundle for</h3>
        <div class="form-group">
            @for (int i = 0; i < Model.SchoolsCheckboxes.Count; i++)
            {
                @Html.HiddenFor(model => model.Schools[i].SchoolId)
                @Html.DisplayFor(model => Model.Schools[i].SchoolName)
                @Html.CheckBoxFor(model => model.SchoolsCheckboxes[i])
                <br />
            }
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Continue" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
