@model InventoryManagement.Models.BundlesViewModel

@{
    ViewBag.Title = "ItemTypesSubmit";
}

<h4>Select Item Types</h4>
@using (Html.BeginForm("ItemTypesSubmit", "Bundles", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.BundleName)
        for (int i = 0; i < Model.SelectedSchoolIds.Count; i++)
        {
            @Html.HiddenFor(model => model.SelectedSchoolIds[i])
    }
    if (Request.Browser.IsMobileDevice)
    {
        for (int i = 0; i < Model.ItemTypesCheckboxes.Count; i++)
        {
            @Html.HiddenFor(model => model.ItemTypes[i].ItemTypeId)
            @Html.HiddenFor(model => model.ItemTypes[i].ItemName)
            <div class="row">
                <div class="col-xs-4">
                    @Html.DisplayFor(model => Model.ItemTypes[i].ItemName)
                </div>
                <div class="col-xs-4">
                    @Html.CheckBoxFor(model => model.ItemTypesCheckboxes[i])
                </div>
            </div>
        }
    }
    else
    {
        for (int i = 0; i < Model.ItemTypesCheckboxes.Count; i++)
        {
            @Html.HiddenFor(model => model.ItemTypes[i].ItemTypeId)
            @Html.HiddenFor(model => model.ItemTypes[i].ItemName)
            <div class="row">
                <div class="col-sm-2">
                    @Html.DisplayFor(model => Model.ItemTypes[i].ItemName)
                </div>
                <div class="col-sm-4">
                    @Html.CheckBoxFor(model => model.ItemTypesCheckboxes[i])
                </div>
            </div>
        }
    }

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Continue" class="btn btn-default" />
        </div>
    </div>
}
