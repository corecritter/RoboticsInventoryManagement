@model InventoryManagement.Controllers.BundlesViewModel

@{
    ViewBag.Title = "ItemTypesSubmit";
}

<h2>ItemTypeSelect</h2>
@using (Html.BeginForm("ItemTypesSubmit", "BundlesController"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @for (int i = 0; i < Model.ItemTypesCheckboxes.Count; i++)
        {
            @Html.HiddenFor(model => model.Schools[i].SchoolId)
            @Html.DisplayFor(model => Model.ItemTypes[i].ItemName)
            @Html.CheckBoxFor(model => model.ItemTypesCheckboxes[i])
            <br />
        }
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Continue" class="btn btn-default" />
        </div>
    </div>
}
