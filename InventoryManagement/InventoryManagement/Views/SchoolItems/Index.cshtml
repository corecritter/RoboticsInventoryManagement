@model InventoryManagement.Models.SchoolsItemsIndexViewModel
@{
    ViewBag.Title = "Index";
}

<h3>Select view next to your School Name to view the list of items currently checked out</h3>
<table>
    @for (int i = 0; i < Model.Schools.Count; i++)
    {
        <tr>
            <td>
                @Html.DisplayFor(model => model.Schools[i].SchoolName) | 
            </td>
            <td>
                @Html.ActionLink("View", "ViewItems", new { id = Model.Schools[i].SchoolId })
            </td>
        </tr>
    }
</table>
