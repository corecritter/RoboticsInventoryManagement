@model InventoryManagement.Models.CheckInItemTypeSelectViewModel
@{
    ViewBag.Title = "Index";
}

<h2>Check In</h2>
@using (Html.BeginForm("ItemTypesSubmit", "CheckIn", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.SelectedSchoolId)
    <div class="row">
        <div class="col-sm-2"> 
            @Html.DisplayName("Item Name")
        </div>
        <div class="col-sm-4">
            @Html.DisplayName("Check In")
        </div>
    </div>
        for (int i = 0; i < Model.ItemTypesModel.Count; i++)
        {
            @Html.HiddenFor(model => model.ItemTypesModel[i].ItemTypeId)
            <div class="row">
                <div class="col-sm-2">
                    @Html.DisplayFor(model => model.ItemTypesModel[i].ItemName)
                </div>
                <div class="col-sm-4">
                    @Html.CheckBoxFor(model => model.ItemTypesCheckboxes[i])
                </div>
            </div>
        }
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Continue" class="btn btn-default" />
        </div>
    </div>
}
