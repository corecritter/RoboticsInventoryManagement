@model InventoryManagement.Models.CheckInViewModel

@{
    ViewBag.Title = "InventoryReturnReminder";
}

<h4>Return Inventory Reminder</h4>
@using (Html.BeginForm("InventoryReturnConfirm", "CheckIn", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <table>
        <tr>
            <td>
                Item Name
            </td>
            <td>
                Item Label
            </td>
            <td>
                Inventory Location
            </td>
        </tr>
        @for (int i = 0; i < Model.RentedItems.Count; i++)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => model.RentedItems[i].ItemType.ItemName)
                </td>
                <td>
                    @Html.DisplayFor(model => model.RentedItems[i].Label.LabelName)
                </td>
                <td>
                    @Html.DisplayFor(model => model.RentedItems[i].InventoryLocation.InventoryLocationName)
                </td>
            </tr>
        }
    </table>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="OK" class="btn btn-default" />
        </div>
    </div>
}
