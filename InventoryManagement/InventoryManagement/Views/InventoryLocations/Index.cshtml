@model IEnumerable<InventoryManagement.Database.InventoryLocations>

@{
    ViewBag.Title = "Index";
}

<h4>Inventory Locations</h4>
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.InventoryLocationName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.InventoryLocationName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.InventoryLocationId }) |
            @Html.ActionLink("Details", "Details", new { id=item.InventoryLocationId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.InventoryLocationId })
        </td>
    </tr>
}

</table>
