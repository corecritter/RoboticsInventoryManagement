@model InventoryManagement.Models.CheckOutViewModel
@{
    ViewBag.Title = "BundleSelection";
}

<h4>Select a Bundle</h4>
@using (Html.BeginForm())
{
    if (Request.Browser.IsMobileDevice)
    {
        <div class="row">
            <div class="col-xs-6"> 
                @Html.DisplayName("All Items")
            </div>
            <div class="col-xs-6">
                @Html.ActionLink("Select", "MakeBundleSelection", new { bundleId = 0, schoolId = Model.SelectedSchoolId })
            </div>
        </div>
        for (int i = 0; i < Model.Bundles.Count; i++)
        {
            <div class="row">
                <div class="col-xs-6">
                    @Html.DisplayName(Model.Bundles[i].BundleName)
                </div>
                <div class="col-xs-6">
                    @Html.ActionLink("Select", "MakeBundleSelection", new { bundleId = Model.Bundles[i].BundleId, schoolId = Model.SelectedSchoolId })
                </div>
            </div>
        }
    }
    else
    {
        <div class="row">
            <div class="col-sm-2"> @Html.DisplayName("All Items")</div>
            <div class="col-sm-4">
                @Html.ActionLink("Select", "MakeBundleSelection", new { bundleId = 0, schoolId = Model.SelectedSchoolId })
            </div>
        </div>
        for (int i = 0; i < Model.Bundles.Count; i++)
        {
            <div class="row">
                <div class="col-sm-2">
                    @Html.DisplayName(Model.Bundles[i].BundleName)
                </div>
                <div class="col-sm-4">
                    @Html.ActionLink("Select", "MakeBundleSelection", new { bundleId = Model.Bundles[i].BundleId, schoolId = Model.SelectedSchoolId })
                </div>
            </div>
        }

    }

}

