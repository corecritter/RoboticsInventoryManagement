@model InventoryManagement.Models.CheckOutViewModel
@{
    ViewBag.Title = "ItemsSelect";
}

<h2>Lend the following Items with the appropriate labels</h2>
@using (Html.BeginForm("ItemsSubmit", "CheckOut", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.SelectedSchoolId)

    <div class="row">
        <div class="col-sm-2"> 
            @Html.DisplayName("Item Name")
        </div>
        <div class="col-sm-4">
            @Html.DisplayName("Label")
        </div>
    </div>
    for (int i = 0; i < Model.ItemsToCheckOut.Count; i++)
    {
        @Html.HiddenFor(model => model.ItemsToCheckOut[i].ItemId)
        <div class="row">
            <div class="col-sm-2">
                @Html.DisplayFor(model => model.ItemsToCheckOut[i].ItemType.ItemName)
            </div>
            @if (Model.ItemsToCheckOut[i].ItemType.HasLabel)
            {
                <div class="col-sm-4">
                    @Html.DisplayName(Model.ItemsToCheckOut[i].Label.LabelName)
                </div>
            }
        </div>
    }
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Checkout" class="btn btn-default" />
        </div>
    </div>
}
