@model InventoryManagement.Models.CheckOutViewModel
@{
    ViewBag.Title = "ItemsSelect";
}

<h4>Lend the following Items with the appropriate labels</h4>
@using (Html.BeginForm("ItemsSubmit", "CheckOut", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.SelectedSchoolId)
    if (Request.Browser.IsMobileDevice)
    {
        <div class="row">
            <div class="col-xs-4"> 
                @Html.DisplayName("Item")
            </div>
            <div class="col-xs-4">
                @Html.DisplayName("Label")
            </div>
        </div>
        <hr />
        for (int i = 0; i < Model.ItemDisplayString.Count; i++)
        {
            <div class="row">
                <div class="col-xs-4">
                    @Html.DisplayFor(model => model.ItemDisplayString[i])
                </div>
                <div class="col-xs-4">
                    @Html.DisplayFor(model => model.ItemDisplayLabels[i])
                </div>
            </div>
            <hr />
        }
    }
    else
    {
        <div class="row">
            <div class="col-sm-2">
                @Html.DisplayName("Item")
            </div>
            <div class="col-sm-4">
                @Html.DisplayName("Label")
            </div>
        </div>
        <hr />
        for (int i = 0; i < Model.ItemDisplayString.Count; i++)
        {
            <div class="row">
                <div class="col-sm-2">
                    @Html.DisplayFor(model => model.ItemDisplayString[i])
                </div>
                <div class="col-sm-4">
                    @Html.DisplayFor(model => model.ItemDisplayLabels[i])
                </div>
            </div>
            <hr />
        }
    }
    for (int i = 0; i < Model.ItemsToCheckOut.Count; i++)
    {
        @Html.HiddenFor(model => model.ItemsToCheckOut[i].ItemId)
    }
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Checkout" class="btn btn-default" />
        </div>
    </div>
}
