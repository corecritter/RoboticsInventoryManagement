@model InventoryManagement.Models.CheckOutViewModel
@{
    ViewBag.Title = "Index";
}

<h4>Select School</h4>

<table class="table">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @for (int i=0; i<Model.Schools.Count; i++)
    {
        <tr>
            <td>
                @Html.HiddenFor(model => model.Schools[i].SchoolId)
                @Html.DisplayFor(model => model.Schools[i].SchoolName)
            </td>
            <td>
                @Html.ActionLink("Check In", "CheckIn", new { id = Model.Schools[i].SchoolId }) |
                @Html.ActionLink("Check Out", "SelectSchoolOut", new { id = Model.Schools[i].SchoolId })
            </td>
        </tr>
    }

</table>

